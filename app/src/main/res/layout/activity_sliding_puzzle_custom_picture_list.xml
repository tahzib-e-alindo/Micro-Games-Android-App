<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slidingpuzzle_bg_color"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="100dp"
    android:paddingBottom="100dp"
    android:paddingRight="25dp"
    android:paddingLeft="25dp"
    tools:context=".SlidingPuzzleMenuActivity">

    <LinearLayout
        android:id="@+id/llMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/slidingpuzzle_board" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Sliding Puzzle"
            android:textSize="25dp"
            android:fontFamily="@font/bebas_neue_bold"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Custom Pictures"
                android:textAlignment="center"
                android:textSize="25dp"
                android:fontFamily="@font/bebas_neue_bold"
                android:textColor="@color/white"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/rgPictureList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/llPicture0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="15dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:clickable="false"
                            android:focusable="false"
                            android:background="@drawable/slidingpuzzle_custom_picture_list_item_background">
                            <RadioButton
                                android:id="@+id/rbPicture0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  Picture 1"
                                android:textSize="25dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/bebas_neue_bold"
                                android:textColor="@color/white"
                                android:clickable="true"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:gravity="right|center_vertical">
                                <TextView
                                    android:id="@+id/btnDeletePicture0"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="✖"
                                    android:textSize="20dp"
                                    android:fontFamily="@font/bebas_neue_bold"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llPicture1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="15dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:clickable="false"
                            android:focusable="false"
                            android:background="@drawable/slidingpuzzle_custom_picture_list_item_background">
                            <RadioButton
                                android:id="@+id/rbPicture1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  Picture 2"
                                android:textSize="25dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/bebas_neue_bold"
                                android:textColor="@color/white"
                                android:clickable="true"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:gravity="right|center_vertical">
                                <TextView
                                    android:id="@+id/btnDeletePicture1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="✖"
                                    android:textSize="20dp"
                                    android:fontFamily="@font/bebas_neue_bold"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llPicture2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="15dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:clickable="false"
                            android:focusable="false"
                            android:background="@drawable/slidingpuzzle_custom_picture_list_item_background">
                            <RadioButton
                                android:id="@+id/rbPicture2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  Picture 3"
                                android:textSize="25dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/bebas_neue_bold"
                                android:textColor="@color/white"
                                android:clickable="true"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:gravity="right|center_vertical">
                                <TextView
                                    android:id="@+id/btnDeletePicture2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="✖"
                                    android:textSize="20dp"
                                    android:fontFamily="@font/bebas_neue_bold"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llPicture3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="15dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:clickable="false"
                            android:focusable="false"
                            android:background="@drawable/slidingpuzzle_custom_picture_list_item_background">
                            <RadioButton
                                android:id="@+id/rbPicture3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  Picture 4"
                                android:textSize="25dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/bebas_neue_bold"
                                android:textColor="@color/white"
                                android:clickable="true"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:gravity="right|center_vertical">
                                <TextView
                                    android:id="@+id/btnDeletePicture3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="✖"
                                    android:textSize="20dp"
                                    android:fontFamily="@font/bebas_neue_bold"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llPicture4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="15dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:clickable="false"
                            android:focusable="false"
                            android:background="@drawable/slidingpuzzle_custom_picture_list_item_background">
                            <RadioButton
                                android:id="@+id/rbPicture4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  Picture 5"
                                android:textSize="25dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/bebas_neue_bold"
                                android:textColor="@color/white"
                                android:clickable="true"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:gravity="right|center_vertical">
                                <TextView
                                    android:id="@+id/btnDeletePicture4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="✖"
                                    android:textSize="20dp"
                                    android:fontFamily="@font/bebas_neue_bold"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/btnAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Add"
                            android:textSize="25dp"
                            android:fontFamily="@font/bebas_neue_bold"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/btnExit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Exit"
                    android:textSize="25dp"
                    android:fontFamily="@font/bebas_neue_bold"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/btnStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Start"
                    android:textSize="25dp"
                    android:fontFamily="@font/bebas_neue_bold"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>